<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background03_blur"
    tools:context=".JoinForm">

    <EditText
        android:id="@+id/textView12"
        android:layout_width="382dp"
        android:layout_height="68dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/input_bg"
        android:hint="Time"
        android:textColorHint="@color/teal_200"
        android:gravity="center"
        android:textColor="#D2FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/textView2"
        android:layout_width="382dp"
        android:layout_height="68dp"
        android:background="@drawable/input_bg"
        android:hint="Tournament name"
        android:textColorHint="@color/teal_200"
        android:gravity="center"
        android:textColor="#D2FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.874" />

    <EditText
        android:id="@+id/textView4"
        android:layout_width="382dp"
        android:layout_height="68dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/input_bg"
        android:hint="Type"
        android:textColorHint="@color/teal_200"
        android:gravity="center"
        android:textColor="#D2FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/textView3"
        android:layout_width="382dp"
        android:layout_height="68dp"
        android:layout_marginBottom="128dp"
        android:background="@drawable/input_bg"
        android:gravity="center"
        android:hint="Entry fee"
        android:textColorHint="@color/teal_200"
        android:textColor="#D2FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/nextBtnJoin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nextBtnJoin"
        android:layout_width="172dp"
        android:layout_height="52dp"
        android:layout_marginBottom="168dp"
        android:background="#4BFFFFFF"
        android:shadowDy="8"
        android:shadowRadius="20"
        android:text="Next  >"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        app:iconPadding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/joinFormBack"
        android:layout_width="47dp"
        android:layout_height="44dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00000000"
        android:textSize="8sp"
        app:icon="@drawable/ic_baseline_arrow_back_ios_new_24"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toStartOf="@+id/joinFormHome"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.188" />

    <Button
        android:id="@+id/joinFormHome"
        android:layout_width="47dp"
        android:layout_height="46dp"
        android:layout_marginEnd="24dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00000000"
        app:icon="@drawable/ic_baseline_home_24"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.192" />

</androidx.constraintlayout.widget.ConstraintLayout>