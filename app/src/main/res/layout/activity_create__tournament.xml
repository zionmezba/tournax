<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg01"
    tools:context=".Create_Tournament"
    tools:ignore="DuplicateIds">

    <EditText
        android:id="@+id/TournamentName"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:hint="Tournament Name"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="#9AFFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/GameType"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:hint="Game Type"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="#9AFFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/TournamentName"
        app:layout_constraintStart_toStartOf="@+id/TournamentName"
        app:layout_constraintTop_toBottomOf="@+id/TournamentName" />

    <EditText
        android:id="@+id/GameTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:hint="Game Time"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="#9AFFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/GameType"
        app:layout_constraintStart_toStartOf="@+id/GameType"
        app:layout_constraintTop_toBottomOf="@+id/GameType" />


    <EditText
        android:id="@+id/Organizer_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:hint="Organizer Name"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="#9AFFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/radio_four"
        app:layout_constraintStart_toStartOf="@+id/radio_four"
        app:layout_constraintTop_toBottomOf="@+id/radio_four" />

    <TextView
        android:id="@+id/text_participation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="14dp"
        android:fontFamily="sans-serif"
        android:text="Participation Type:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#E0FFFFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/GameTime"
        app:layout_constraintStart_toStartOf="@+id/GameTime"
        app:layout_constraintTop_toBottomOf="@+id/GameTime" />


    <RadioButton
        android:id="@+id/radio_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:checked="false"
        android:text="Squad VS Squad"
        android:textColor="#00BCD4"
        app:layout_constraintEnd_toEndOf="@+id/text_participation"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="@+id/text_participation"
        app:layout_constraintTop_toBottomOf="@+id/text_participation" />

    <RadioButton
        android:id="@+id/radio_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Duo VS Squad"
        android:textColor="#00BCD4"
        app:layout_constraintEnd_toEndOf="@+id/text_participation"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/text_participation"
        app:layout_constraintTop_toBottomOf="@+id/radio_one" />

    <RadioButton
        android:id="@+id/radio_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Solo VS Squad"
        android:textColor="#00BCD4"
        app:layout_constraintEnd_toEndOf="@+id/text_participation"
        app:layout_constraintStart_toStartOf="@+id/text_participation"
        app:layout_constraintTop_toBottomOf="@+id/radio_two" />

    <RadioButton
        android:id="@+id/radio_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Random Squad"
        android:textColor="#00BCD4"
        app:layout_constraintEnd_toEndOf="@+id/text_participation"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="@+id/text_participation"
        app:layout_constraintTop_toBottomOf="@+id/radio_three" />


    <EditText
        android:id="@+id/Oranizer_Contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:hint=" Organizer Contact information"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="#9AFFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/Organizer_Name"
        app:layout_constraintStart_toStartOf="@+id/Organizer_Name"
        app:layout_constraintTop_toBottomOf="@+id/Organizer_Name" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="118dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="118dp"
        android:background="#03A9F4"
        android:backgroundTint="#313435"
        android:shadowDy="8"
        android:shadowRadius="2"
        android:text="Next"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        app:iconPadding="20dp"
        app:iconTint="#03A9F4"
        app:layout_constraintEnd_toEndOf="@+id/Oranizer_Contact"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="@+id/Oranizer_Contact"
        app:layout_constraintTop_toBottomOf="@+id/Oranizer_Contact"
        app:strokeColor="#061C93"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/createBack"
        android:layout_width="47dp"
        android:layout_height="44dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#00000000"
        android:drawableStart="@drawable/gradient_bg01"
        android:textSize="8sp"
        app:icon="@drawable/ic_baseline_arrow_back_ios_new_24"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/TournamentName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="#00FFEB3B"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/createHome"
        android:layout_width="47dp"
        android:layout_height="46dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="14dp"
        android:backgroundTint="#00000000"
        app:icon="@drawable/ic_baseline_home_24"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>